<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.disasterprevention">

    <!-- 網路存取權限 -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- TV 相關特性 -->
    <uses-feature
        android:name="android.hardware.touchscreen"
        android:required="false" />
    <uses-feature
        android:name="android.software.leanback"
        android:required="false" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher_background"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.DisasterPrevention"
        android:usesCleartextTraffic="true">

        <!-- 洪水警報詳情 -->
        <activity
            android:name=".FloodDetailActivity"
            android:exported="false" />

        <!-- 停電詳情 -->
        <activity
            android:name=".PowerOutageDetailActivity"
            android:exported="false"
            android:label="@string/title_activity_power_outage_detail"
            android:theme="@style/Theme.DisasterPrevention" />

        <!-- 新版主畫面 (RecyclerView 架構) -->
        <activity
            android:name=".HomeActivity"
            android:banner="@drawable/ic_launcher_background"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LEANBACK_LAUNCHER" />
                <!-- 可同時支援手機模擬器 -->
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 舊版主畫面，已不啟動 -->
        <activity
            android:name=".MainActivity"
            android:exported="false" />
        <activity android:name=".HistoryActivity" android:exported="false" />
        <activity android:name=".DetailsActivity" android:exported="false" />
        <activity android:name=".PlaybackActivity" android:exported="false" />
        <activity android:name=".BrowseErrorActivity" android:exported="false" />
        <activity android:name=".LatestDetailActivity" android:exported="true" />
        <activity android:name=".WeatherDetailActivity" android:exported="false" />
        <activity android:name=".HeavyRainAlertActivity" android:exported="false" />
        <activity android:name=".WaterOutageActivity" android:exported="false" />
        <activity android:name=".WaterOutageDetailsActivity" android:exported="false" />
        <activity android:name=".WaterOutageMoreActivity" android:exported="false" />
        <activity android:name=".WaterOutageMoreDetailsActivity" android:exported="false" />
    </application>

</manifest>
