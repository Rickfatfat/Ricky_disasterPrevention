<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 頁面主標題 -->
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="停水資訊"
            android:textColor="#FFFFFF"
            android:textSize="48sp"
            android:textStyle="bold" />

        <!-- ===== 區塊 1：原因 ===== -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="24dp">

            <TextView
                android:id="@+id/tv_reason_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="原因："
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_reason"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="_"
                android:textColor="#DADADA"
                android:textSize="20sp"
                android:lineSpacingExtra="6dp"
                android:breakStrategy="balanced" />
        </LinearLayout>

        <!-- ===== 區塊 2：影響時間 ===== -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="24dp">

            <TextView
                android:id="@+id/tv_time_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="影響時間："
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="_"
                android:textColor="#DADADA"
                android:textSize="20sp"
                android:lineSpacingExtra="6dp"
                android:breakStrategy="balanced" />
        </LinearLayout>

        <!-- ===== 區塊 3：停水區域（有資料才顯示） ===== -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="24dp">

            <TextView
                android:id="@+id/label_water_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="停水區域："
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_water_area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#DADADA"
                android:textSize="20sp"
                android:lineSpacingExtra="6dp"
                android:breakStrategy="balanced"
                android:visibility="gone" />
        </LinearLayout>

        <!-- ===== 區塊 4：降壓區域（有資料才顯示） ===== -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="24dp">

            <TextView
                android:id="@+id/label_pressure_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="降壓區域："
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_pressure_area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#DADADA"
                android:textSize="20sp"
                android:lineSpacingExtra="6dp"
                android:breakStrategy="balanced"
                android:visibility="gone" />
        </LinearLayout>

        <!-- 若兩組都沒有資料，顯示這個備援訊息（預設隱藏） -->
        <TextView
            android:id="@+id/tv_area_empty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="影響區域：\n未提供"
            android:textColor="#DADADA"
            android:textSize="20sp"
            android:lineSpacingExtra="6dp"
            android:breakStrategy="balanced"
            android:visibility="gone" />

        <!-- 更多公告按鈕 -->
        <Button
            android:id="@+id/btn_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="更多公告"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:clickable="true" />

    </LinearLayout>
</ScrollView>
