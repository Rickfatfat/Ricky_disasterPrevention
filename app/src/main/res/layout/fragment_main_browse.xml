<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <!-- 標題：最新地震 -->
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="187dp"
        android:layout_height="53dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="32dp"
        android:text="最新地震"
        android:textColor="#fae9fd"
        android:textSize="32sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 最新地震內容容器 -->
    <FrameLayout
        android:id="@+id/container_latest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginEnd="44dp"
        android:layout_marginTop="2dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:background="@drawable/focus_frame_background"
        app:layout_constraintTop_toBottomOf="@id/tv_title">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="4dp">

            <TextView
                android:id="@+id/tv_latest_info"
                android:layout_width="0dp"
                android:layout_height="300dp"
                android:layout_weight="1"
                android:text="等待資料..."
                android:textColor="@color/tv_white"
                android:textSize="28sp"
                android:layout_gravity="center_vertical"
                android:padding="2dp" />

            <ImageView
                android:id="@+id/iv_latest_image"
                android:layout_width="350dp"
                android:layout_height="350dp"
                android:layout_marginStart="20dp"
                android:contentDescription="@string/latest_quake_image" />
        </LinearLayout>
    </FrameLayout>

    <Button
        android:id="@+id/btn_history"
        android:layout_width="129dp"
        android:layout_height="55dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/btn_history_background"
        android:text="歷史資料"
        android:textColor="@color/btn_history_text_color"
        android:textSize="28sp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:clickable="true"
        android:stateListAnimator="@animator/focus_scale"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/container_latest" />

    <!--  預留停水 RecyclerView（不顯示，僅避免紅字） -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_water"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />

    <!-- Guideline (可忽略) -->
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</androidx.constraintlayout.widget.ConstraintLayout>
