<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:background="@color/background_black">

    <!-- ðŸ”¹ å·¦å´åœ°åœ–åœ–ç¤º -->
    <ImageView
        android:id="@+id/historyShakemap"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:scaleType="centerCrop"
        android:contentDescription="@string/shakemap_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- ðŸ”¹ æ—¥æœŸ -->
    <TextView
        android:id="@+id/historyDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/text_white"
        android:textSize="20sp"
        android:layout_marginStart="8dp"
        android:ellipsize="end"
        android:maxLines="1"
        app:layout_constraintStart_toEndOf="@id/historyShakemap"
        app:layout_constraintEnd_toStartOf="@id/historyMagnitude"
        app:layout_constraintTop_toTopOf="@id/historyShakemap"
        app:layout_constraintHorizontal_weight="1"/>

    <!-- ðŸ”¹ è¦æ¨¡ -->
    <TextView
        android:id="@+id/historyMagnitude"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:textColor="#FF5722"
        android:textSize="20sp"
        android:gravity="center"
        app:layout_constraintEnd_toStartOf="@+id/historyIntensity"
        app:layout_constraintTop_toTopOf="@id/historyDate" />

    <!-- ðŸ”¹ éœ‡åº¦ -->
    <TextView
        android:id="@+id/historyIntensity"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:textColor="#03A9F4"
        android:textSize="20sp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/historyDate" />

    <!-- ðŸ”¹ éœ‡å¤® -->
    <TextView
        android:id="@+id/historyEpicenter"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/text_white"
        android:textSize="20sp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="0dp"
        android:maxLines="2"
        android:ellipsize="end"
        app:layout_constraintStart_toStartOf="@id/historyDate"
        app:layout_constraintEnd_toStartOf="@id/historyMagnitude"
        app:layout_constraintTop_toBottomOf="@id/historyDate"/>

</androidx.constraintlayout.widget.ConstraintLayout>
