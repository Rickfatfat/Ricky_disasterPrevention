<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tv_background_black">

    <!-- 標題 -->
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginTop="32dp"
        android:text="歷史地震資訊"
        android:textColor="#fae9fd"
        android:textSize="32sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- 可聚焦容器 -->
    <FrameLayout
        android:id="@+id/container_latest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginEnd="44dp"
        android:layout_marginTop="16dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:background="@drawable/focus_frame_background"
        app:layout_constraintTop_toBottomOf="@id/tv_title">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="4dp">

            <!-- 左側文字四行 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="2dp">

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="時間："
                    android:textColor="@color/tv_white"
                    android:textSize="28sp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:id="@+id/tv_epicenter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="地點："
                    android:textColor="@color/tv_white"
                    android:textSize="28sp"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:id="@+id/tv_magnitude"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="規模："
                    android:textColor="#FF5722"
                    android:textSize="28sp"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:id="@+id/tv_intensity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="本地："
                    android:textColor="#03A9F4"
                    android:textSize="28sp"
                    android:layout_marginBottom="4dp"/>
            </LinearLayout>

            <!-- 右側圖片 -->
            <ImageView
                android:id="@+id/iv_shakemap"
                android:layout_width="400dp"
                android:layout_height="400dp"
                android:layout_marginStart="20dp"
                android:scaleType="centerCrop"
                android:contentDescription="@string/latest_quake_image"/>
        </LinearLayout>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
